<body>

    <h1>Kundenverwaltung</h1>

    <form id="kundenForm">
        <div>
            <label for="nachname">Nachname:</label>
            <input type="text" id="nachname" required>
        </div>
        <div>
            <label for="vorname">Vorname:</label>
            <input type="text" id="vorname" required>
        </div>
        <div>
            <label for="telefonnummer">Telefonnummer:</label>
            <input type="tel" id="telefonnummer" required>
        </div>
        <div>
            <label for="adresse">Adresse (Straße):</label>
            <input type="text" id="adresse" required>
        </div>
        <div>
            <label for="hausnummer">Hausnummer:</label>
            <input type="text" id="hausnummer" required>
        </div>
        <div>
            <label for="plz">PLZ:</label>
            <input type="text" id="plz" required>
        </div>
        <div>
            <label for="ort">Ort:</label>
            <input type="text" id="ort" required>
        </div>

        <button type="submit" id="submitButton">Kunden speichern</button>
    </form>

    <hr>

    <h2>Kundenübersicht</h2>

    <table id="kundenTabelle">
        <thead>
            <tr>
                <th>Nachname</th>
                <th>Vorname</th>
                <th>Adresse</th>
                <th>Hausnummer</th>
                <th>PLZ</th>
                <th>Ort</th>
                <th>Telefonnummer</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody id="kundenListe">
            </tbody>
    </table>

    <script>
        const form = document.getElementById('kundenForm');
        const kundenListe = document.getElementById('kundenListe');
        let kunden = []; // Array zum Speichern der Kundendaten
        let isEditing = false;
        let editIndex = -1;
        const submitButton = document.getElementById('submitButton');

        // Funktion zum Laden der Kunden aus dem localStorage
        function loadKunden() {
            const savedKunden = localStorage.getItem('kundenDaten');
            if (savedKunden) {
                kunden = JSON.parse(savedKunden);
            }
            renderKunden();
        }

        // Funktion zum Speichern der Kunden im localStorage
        function saveKunden() {
            localStorage.setItem('kundenDaten', JSON.stringify(kunden));
        }

        // Funktion zum Rendern der Tabelle
        function renderKunden() {
            kundenListe.innerHTML = ''; // Tabelle leeren

            kunden.forEach((kunde, index) => {
                const row = kundenListe.insertRow();

                // Datenzellen einfügen
                row.insertCell().textContent = kunde.nachname;
                row.insertCell().textContent = kunde.vorname;
                row.insertCell().textContent = kunde.adresse;
                row.insertCell().textContent = kunde.hausnummer;
                row.insertCell().textContent = kunde.plz;
                row.insertCell().textContent = kunde.ort;
                row.insertCell().textContent = kunde.telefonnummer;

                // Aktionszelle mit Buttons
                const actionCell = row.insertCell();

                const editButton = document.createElement('button');
                editButton.textContent = 'Bearbeiten';
                editButton.classList.add('action-btn', 'edit-btn');
                editButton.onclick = () => startEdit(index);
                actionCell.appendChild(editButton);

                const deleteButton = document.createElement('button');
                deleteButton.textContent = 'Löschen';
                deleteButton.classList.add('action-btn', 'delete-btn');
                deleteButton.onclick = () => deleteKunde(index);
                actionCell.appendChild(deleteButton);
            });
        }

        // --- Event Listener für das Formular ---
        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Verhindert das Neuladen der Seite

            const neuerKunde = {
                nachname: document.getElementById('nachname').value.trim(),
                vorname: document.getElementById('vorname').value.trim(),
                adresse: document.getElementById('adresse').value.trim(),
                hausnummer: document.getElementById('hausnummer').value.trim(),
                plz: document.getElementById('plz').value.trim(),
                ort: document.getElementById('ort').value.trim(),
                telefonnummer: document.getElementById('telefonnummer').value.trim()
            };

            if (isEditing) {
                // Modus: Bearbeiten
                kunden[editIndex] = neuerKunde;
                isEditing = false;
                editIndex = -1;
                submitButton.textContent = 'Kunden speichern';
            } else {
                // Modus: Neu hinzufügen
                kunden.push(neuerKunde);
            }

            saveKunden();
            renderKunden();
            form.reset(); // Formularfelder leeren
        });

        // --- Funktionen für Aktionen ---

        // Bearbeiten-Funktion
        function startEdit(index) {
            const kundeToEdit = kunden[index];

            // Daten in die Formularfelder laden
            document.getElementById('nachname').value = kundeToEdit.nachname;
            document.getElementById('vorname').value = kundeToEdit.vorname;
            document.getElementById('adresse').value = kundeToEdit.adresse;
            document.getElementById('hausnummer').value = kundeToEdit.hausnummer;
            document.getElementById('plz').value = kundeToEdit.plz;
            document.getElementById('ort').value = kundeToEdit.ort;
            document.getElementById('telefonnummer').value = kundeToEdit.telefonnummer;

            // Bearbeitungsmodus setzen
            isEditing = true;
            editIndex = index;
            submitButton.textContent = 'Änderungen speichern';
            window.scrollTo({ top: 0, behavior: 'smooth' }); // Zum Formular scrollen
        }

        // Löschen-Funktion
        function deleteKunde(index) {
            if (confirm(`Sind Sie sicher, dass Sie den Kunden ${kunden[index].nachname} ${kunden[index].vorname} löschen möchten?`)) {
                kunden.splice(index, 1); // Eintrag aus dem Array entfernen
                saveKunden();
                renderKunden();
            }
        }

        // Beim Laden der Seite die gespeicherten Kunden abrufen
        window.onload = loadKunden;
    </script>
</body>
</html>
